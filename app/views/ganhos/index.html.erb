<% if @ganhos.empty? %>
<br/>
Nenhum ganho encontrado.
<br/>
<% else %>

<table>
  <tr>
    <th>Descrição</th>
    <th>Valor</th>
    <th>Data</th>
    <th colspan='3'>Ações</th>
  </tr>

<% @ganhos.each do |ganho| %>
  <tr>
    <td><%= ganho.descricao %></td>
    <td><%= ganho.valor %></td>
    <td><%= ganho.data %></td>
    <td><%= link_to 'Visualizar', ganho %></td>
    <td><%= link_to 'Editar', edit_ganho_path(ganho) %></td>
    <td><%= link_to 'Excluir', ganho, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
 </table>
<% end %>
<br />

<%= link_to 'Novo Ganho', new_ganho_path %>
