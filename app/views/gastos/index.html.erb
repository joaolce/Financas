<% if @gastos.empty? %>
<br/>
Nenhum gasto encontrado.
<br/>
<% else %>
  <table>
    <tr>
      <th>Data</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th colspan="3">Ações</th>
    </tr>
    
    <% @gastos.each do |gasto| %>
    <tr>
      <td><%= gasto.data %></td>
      <td><%= gasto.descricao %></td>
      <td><%= gasto.valor %></td>
      <td><%= link_to 'Visualizar', gasto %></td>
      <td><%= link_to 'Editar', edit_gasto_path(gasto) %></td>
      <td><%= link_to 'Excluir', gasto, :confirm => 'Tem certeza que deseja excluir este gasto?', :method => :delete %></td>
    </tr>
    <td><% @Total += gasto.valor %></td>
       
    <% end %>
    <br/>
    <tr>
      <td></td>
      <td><label>Total</label></td>
      <td><%= @Total %></td>
    </tr>
    
  </table>
<% end %>
<br />
<%= link_to 'Novo Gasto', new_gasto_path %>
