 <br />
 
 <div align="center">
 <br />
 <%= form_for @user_session, :url => {:action => "create"} do |f| %>
    <%= f.error_messages %>
  	<table>
  		<tr>
  			<td>
  				<%= f.label :login %>:
  			</td>
  			<td>
  				<%= f.text_field :login %>
  			</td>
  		</tr>
  		
  		<tr>
  			<td>
  				<%= f.label :password %>:
  			</td>
  			<td>
  				<%= f.password_field :password %>
  			</td>
  		</tr>
  		<tr>
  			<td colspan="2">
  			  <div align="right">
  					<%= f.check_box :remember_me %>
    				<%= f.label :remember_me %>
    			</div>
  			</td>
  		</tr>
  		<tr>
  			<td colspan="2">
  				<div align="center">
  					<%= f.submit "Entrar" %>
  				</div>
  			</td>
  		</tr>
    </table>
    <br />
    <label>Ainda não tem cadastro? <%= link_to 'Clique aqui', :new_user %></label>
  <% end %>
</div>

<div>
  <label>Saudades da vuvuzela? <br/>
    <div id="botaoOuvir">
      <%= button_to_function "Ouvir", "Element.show('vuvuzela'); Element.hide('botaoOuvir'); Element.show('botaoCansei');" %>
    </div>
    <div id="botaoCansei" style="display:none">
      <%= button_to_function "Cansei", "Element.hide('vuvuzela'); Element.hide('botaoCansei'); Element.show('botaoOuvir');" %>
    </div>
    <div id="vuvuzela" style="display:none">
      <img src="/images/vuvuzela.jpeg" />
      <embed src="http://s3.amazonaws.com/vuvu/1.swf">
    </div>
  </label> 

</div>